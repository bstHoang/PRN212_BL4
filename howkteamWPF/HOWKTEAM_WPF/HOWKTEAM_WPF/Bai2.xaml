<Window x:Class="HOWKTEAM_WPF.Bai2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HOWKTEAM_WPF"
        mc:Ignorable="d"
        Title="Bai2" Height="450" Width="800">
    <Grid>
        <TextBlock Foreground="#FFFB1429" 
                   MouseEnter="TextBlock_MouseEnter"
                   Background="Aqua"
                   Height="50"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" 
                   TextWrapping="WrapWithOverflow" RenderTransformOrigin="0.5,0.5"                   
                   >
            <TextBlock.Text>
                hk
            </TextBlock.Text>
            <TextBlock.FontSize>
                50
            </TextBlock.FontSize>
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="50"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            <TextBlock.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.LayoutTransform>
        </TextBlock>
    </Grid>
</Window>
